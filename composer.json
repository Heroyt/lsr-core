{
	"name": "lsr/core",
	"description": "Laser framework core.",
	"version": "0.1.12",
	"repositories": [
		{
			"type": "composer",
			"url": "https://packages.laserliga.cz"
		}
	],
	"scripts": {
		"test": "./vendor/bin/phpunit",
		"docs": "doxygen"
	},
	"require-dev": {
		"roave/security-advisories": "dev-latest",
		"phpunit/phpunit": "^9.5",
		"phpstan/phpstan": "^1.8",
		"phpstan/extension-installer": "^1.1",
		"phpstan/phpstan-dibi": "^1.0",
		"phpstan/phpstan-nette": "^1.0"
	},
	"autoload": {
		"psr-4": {
			"Lsr\\Core\\": "src/"
		}
	},
	"authors": [
		{
			"name": "Tomáš Vojík",
			"email": "vojik@wboy.cz"
		}
	],
	"minimum-stability": "dev",
	"require": {
		"lsr/interfaces": "^0.1",
		"lsr/logging": "^0.1",
		"ext-fileinfo": "*",
		"ext-gettext": "*",
		"ext-simplexml": "*",
		"ext-ctype": "*",
		"ext-mbstring": "*",
		"ext-pdo_sqlite": "*",
		"latte/latte": "3.0.0",
		"nette/di": "^3.0",
		"nette/caching": "^3.1",
		"nette/http": "^3.1",
		"ext-zip": "*",
		"dibi/dibi": "^4.2",
		"lsr/routing": "^0.1",
		"lsr/request": "^0.1"
	},
	"config": {
		"allow-plugins": {
			"phpstan/extension-installer": true
		}
	}
}
