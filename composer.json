{
	"name": "lsr/core",
	"description": "Laser framework core.",
	"version": "0.2.14",
	"repositories": [
		{
			"type": "composer",
			"url": "https://packages.laserliga.cz"
		}
	],
	"scripts": {
		"test": "./vendor/bin/phpunit",
		"docs": "doxygen"
	},
	"require-dev": {
		"roave/security-advisories": "dev-latest",
		"phpunit/phpunit": "^10",
		"phpstan/phpstan": "^1.10",
		"phpstan/extension-installer": "^1.2",
		"phpstan/phpstan-dibi": "^1.0",
		"phpstan/phpstan-nette": "^1.2"
	},
	"autoload": {
		"psr-4": {
			"Lsr\\Core\\": "src/"
		}
	},
	"autoload-dev": {
		"psr-4": {
			"TestCases\\": "tests/TestCases/"
		}
	},
	"authors": [
		{
			"name": "Tomáš Vojík",
			"email": "vojik@wboy.cz"
		}
	],
	"minimum-stability": "stable",
	"require": {
		"lsr/interfaces": "^0.2",
		"lsr/logging": "^0.2",
		"ext-fileinfo": "*",
		"ext-gettext": "*",
		"ext-simplexml": "*",
		"ext-ctype": "*",
		"ext-mbstring": "*",
		"ext-pdo_sqlite": "*",
		"latte/latte": "^3.0",
		"nette/di": "^3.1",
		"nette/caching": "^3.2",
		"nette/http": "^3.2",
		"ext-zip": "*",
		"dibi/dibi": "^4.2",
		"lsr/routing": "^0.2",
		"lsr/request": "^0.2"
	},
	"config": {
		"allow-plugins": {
			"phpstan/extension-installer": true
		}
	},
	"extra": {
		"branch-alias": {
			"v0.2": "0.2.x-dev"
		}
	}
}
